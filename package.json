    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.2",
    "morgan": "^1.10.0",
    "redis": "^4.1.0",
    "socket.io": "^4.5.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  },
