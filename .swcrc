{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false
    },
    "target": "es2022",
    "loose": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers": ["controllers"],
      "@constants": ["constants"],
      "@dtos/*": ["dtos/*"],
      "@exceptions/*": ["exceptions/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes": ["routes"],
      "@services": ["services"],
      "@utils/*": ["utils/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": false
}
